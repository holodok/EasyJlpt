<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gogaworm.easyjlpt">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name=".EasyJlptApplication">
        <activity android:name=".view.LearnWordsViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.LessonListActivity"/>
        <activity android:name=".ui.LearnLessonActivity"/>
        <activity android:name=".ui.FlashCardsActivity"/>
        <activity android:name=".ui.ViewLessonContentActivity"/>
        <activity android:name=".ui.ViewGrammarLessonContentActivity"/>
        <activity android:name=".ui.ExamActivity"/>
        <activity android:name=".ui.GrammarDictionaryActivity"/>
    </application>

</manifest>