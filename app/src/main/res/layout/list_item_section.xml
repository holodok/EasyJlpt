<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
              android:paddingLeft="16dp"
              android:paddingRight="8dp"
              android:background="@color/itemBackground">
    <com.gogaworm.easyjlpt.ui.widgets.ArcProgress
            android:id="@+id/progress"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:arc_text_size="10sp"
            app:arc_suffix_text_size="8sp"
            app:arc_suffix_text_padding="2dp"
            android:layout_marginRight="8dp"/>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <com.gogaworm.easyjlpt.ui.widgets.KanjiKanaView
                android:id="@+id/kanjiView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                tools:text="Japanese"/>
        <TextView
                android:id="@+id/translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/secondaryText"
                tools:text="Translation"/>
    </LinearLayout>
    <ImageButton
            android:id="@+id/openButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@mipmap/ic_chevron_right_grey600_24dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/open_section"/>
</LinearLayout>