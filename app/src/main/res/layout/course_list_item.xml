<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?android:attr/selectableItemBackground">
    <TextView
            android:id="@+id/courseTitleView"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            tools:text="Course Title"/>
    <TextView
            android:id="@+id/levelView"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/courseTitleView"
            app:layout_constraintTop_toBottomOf="@id/courseTitleView"
            tools:text="N2"/>
    <TextView
            android:id="@+id/sectionView"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/levelView"
            app:layout_constraintTop_toTopOf="@id/levelView"
            android:layout_marginStart="8dp"
            tools:text="Vocabulary"/>
</androidx.constraintlayout.widget.ConstraintLayout>